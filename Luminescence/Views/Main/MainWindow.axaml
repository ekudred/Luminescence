<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Luminescence.Views"
        xmlns:vm="clr-namespace:Luminescence.ViewModels"
        mc:Ignorable="d"
        x:Class="Luminescence.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        CanResize="True"
        Icon="/Assets/avalonia-logo.ico"
        Title="Luminescence">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Styles>
        <StyleInclude Source="avares://Luminescence/Styles/Views/Main/MainWindowStyle.axaml" />
    </Window.Styles>

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+V" Command="{Binding OpenCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}" />
        <KeyBinding Gesture="Ctrl+Alt+S" Command="{Binding OpenSettingsDialogCommand}" />
    </Window.KeyBindings>

    <Panel>
        <StackPanel>

            <v:HeaderView />

            <v:ChartPanelView />

        </StackPanel>
    </Panel>

</Window>