<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    
    <Style Selector="avalonia|MaterialIcon.Play">
        <Setter Property="Foreground" Value="#22b937" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.Stop">
        <Setter Property="Foreground" Value="#c72525" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.Check">
        <Setter Property="Foreground" Value="#22b937" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.ErrorOutline">
        <Setter Property="Foreground" Value="#c72525" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.Settings">
        <Setter Property="Foreground" Value="#ababab" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.File">
        <Setter Property="Foreground" Value="#ababab" />
    </Style>

    <Style Selector="avalonia|MaterialIcon.Size1">
        <Setter Property="RenderTransform">
            <ScaleTransform ScaleX="1.25" ScaleY="1.25" />
        </Setter>
    </Style>

