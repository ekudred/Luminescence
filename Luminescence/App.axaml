<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Luminescence"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             RequestedThemeVariant="Light"
             x:Class="Luminescence.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>

        <!-- Avalonia Styles -->
        <FluentTheme />

        <!-- Packages Styles -->
        <materialIcons:MaterialIconStyles />

        <!-- Common Styles (сan be overridden) -->
        <StyleInclude Source="avares://Luminescence/Styles/Common/Index.axaml" />
        <StyleInclude Source="avares://Luminescence/Styles/Controls/Index.axaml" />

        <!-- Variables -->
        <StyleInclude Source="avares://Luminescence/Styles/VariablesStyle.axaml" />

    </Application.Styles>

</Application>